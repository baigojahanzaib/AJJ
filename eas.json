{
    "cli": {
        "version": ">= 5.0.0",
        "appVersionSource": "remote"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal",
            "channel": "development"
        },
        "preview": {
            "distribution": "internal",
            "channel": "preview",
            "android": {
                "buildType": "apk"
            }
        },
        "production": {
            "channel": "production",
            "autoIncrement": true,
            "env": {
                "NPM_CONFIG_LEGACY_PEER_DEPS": "true"
            }
        },
        "production-apk": {
            "extends": "production",
            "android": {
                "buildType": "apk"
            }
        }
    },
    "submit": {
        "production": {}
    }
}